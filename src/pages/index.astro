---
import Layout from "../layouts/IndexLayout.astro";
---

<Layout>
  <main class="home">
    <section class="hero">
      <div class="aura" aria-hidden="true"></div>

      <h1 class="name">Fronto</h1>
      <p class="tagline">CTF player & Computer Science student. Deep interest in cybersecurity and programming.</p>

      <div class="cta">
        <a href="/about" class="btn">About Me</a>
        <a href="/writeups" class="btn btn--primary">Writeups</a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .home{
    width:min(100%,1000px);
    margin-inline:auto;
    padding-block:clamp(2rem,6vw,4rem) clamp(2rem,6vw,3rem);
  }

  .hero{
    position:relative;
    overflow:hidden;
    border:1px solid var(--sl-color-gray-5);
    border-radius:16px;
    padding:clamp(2rem,6vw,3.5rem) clamp(1.5rem,5vw,3rem);
    background:linear-gradient(
      180deg,
      rgba(255,255,255,.02) 0%,
      rgba(255,255,255,.01) 100%
    );
    text-align:center;
    box-shadow: 0 10px 30px rgba(0,0,0,.25), inset 0 1px 0 rgba(255,255,255,.05);
  }

  /* subtle glow behind the title */
  .aura{
    position:absolute; inset:-30% -20% auto -20%;
    height:60%;
    background: radial-gradient(60% 60% at 50% 50%,
      rgba(110,75,255,.35) 0%,
      rgba(110,75,255,.08) 45%,
      transparent 70%);
    filter: blur(40px);
    pointer-events:none;
  }

  .name{
    margin:0 0 .4rem 0;
    font-size:clamp(2.4rem,6vw,3.6rem);
    letter-spacing:.3px;
  }

  .tagline{
    margin:.1rem 0 1.6rem;
    color:var(--sl-color-gray-3);
    font-size:clamp(1rem,2.2vw,1.1rem);
  }

  .cta{
    display:flex; gap:.8rem; flex-wrap:wrap; justify-content:center;
  }

  .btn{
    display:inline-block;
    padding:.7rem 1.15rem;
    border:1px solid var(--sl-color-gray-5);
    border-radius:10px;
    text-decoration:none;
    color:var(--sl-color-white);
    background:rgba(255,255,255,.03);
    backdrop-filter:saturate(120%) blur(2px);
    transition:transform .08s ease, background .15s ease, border-color .15s ease, box-shadow .15s ease;
  }
  .btn:hover{
    background:rgba(255,255,255,.06);
    border-color:var(--sl-color-gray-4);
    transform:translateY(-1px);
    box-shadow:0 6px 18px rgba(0,0,0,.25);
  }

  .btn--primary{
    border-color:transparent;
    background:linear-gradient(135deg,#7c4dff 0%, #5e7bff 100%);
  }
  .btn--primary:hover{
    filter:brightness(1.05);
    box-shadow:0 10px 24px rgba(94,123,255,.35);
  }
</style>
