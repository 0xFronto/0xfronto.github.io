---
import Layout from "../layouts/IndexLayout.astro";
import thm from "../data/tryhackme.json"; // { username, profileUrl, badgeIframe }
import htb from "../data/htb.json";       // { username, profileUrl }

const { username: thmUser, profileUrl: thmUrl, badgeIframe } = thm;
const { username: htbUser, profileUrl: htbUrl } = htb;
const year = new Date().getFullYear();
---

<Layout>
  <main class="container">
    <!-- ================= HERO ================= -->
    <section class="hero">
      <div class="aura" aria-hidden="true"></div>

      <div class="avatar" aria-hidden="true">
        <svg viewBox="0 0 24 24" width="22" height="22">
          <path fill="currentColor" d="M4 4h16a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2Zm2.5 5.5 2.75 2.25L6.5 14.5l1 1 4-3.25-4-3.25-1 1ZM11 15h5v-1.5h-5V15Z"/>
        </svg>
      </div>

     <p class="subtitle">
  I’m a <strong>Computer Science student (Robotics major)</strong> focused on <strong>ethical hacking</strong> and <strong>red teaming</strong>.  
  Skilled in <strong>coding</strong>, <strong>reverse engineering</strong>, and <strong>web exploitation</strong>, with solid experience in <strong>CTFs</strong>.  
  I enjoy applying <strong>problem-solving</strong> to <strong>security challenges</strong> and <strong>adversary tactics</strong> while maintaining a <strong>curious, research-driven mindset</strong>.
</p>


      <div class="cta">
        <a class="btn btn--primary" href={thmUrl} target="_blank" rel="noopener">
          TryHackMe ({thmUser})
        </a>
        <a class="btn" href={htbUrl} target="_blank" rel="noopener">
          Hack The Box ({htbUser})
        </a>
      </div>
    </section>

    <!-- ============== TRACK RECORD ============== -->
    <section class="pow">
      <h2 class="title-underline">Stats</h2>
      <div class="cards">
        <!-- THM card -->
        <a class="card card--track" href={thmUrl} target="_blank" rel="noopener">
          <span class="pill pill--thm">TryHackMe</span>
          <div class="badge">
            <div set:html={badgeIframe}></div>
          </div>
        </a>
        

        <!-- HTB card (modifier class .htb) -->
        <a class="card card--track htb" href={htbUrl} target="_blank" rel="noopener">
          <div class="htb-box">
            <img
              src="/htb-logo.png"
              alt="Hack The Box"
              class="htb-logo"
              onerror="this.src='https://resources.hackthebox.com/hubfs/HTB-Logo-1.png'"
            />
          </div>
          <p class="muted center">{htbUser} • view profile  → </p>
        </a>
      </div>
    </section>

   <section class="badges">
  <h2 class="title-underline">Languages & Tools</h2>
  <div class="badges__grid">
    <a href="https://www.python.org/" target="_blank" rel="noopener">
      <img src="https://img.shields.io/badge/Python-3776AB?style=for-the-badge&logo=python&logoColor=white" alt="Python" />
    </a>
    <a href="https://www.gnu.org/software/bash/" target="_blank" rel="noopener">
      <img src="https://img.shields.io/badge/Bash-121011?style=for-the-badge&logo=gnu-bash&logoColor=white" alt="Bash" />
    </a>
    <a href="https://learn.microsoft.com/en-us/powershell/" target="_blank" rel="noopener">
      <img src="https://img.shields.io/badge/PowerShell-5391FE?style=for-the-badge&logo=powershell&logoColor=white" alt="PowerShell" />
    </a>
    <a href="https://www.php.net/" target="_blank" rel="noopener">
      <img src="https://img.shields.io/badge/PHP-777BB4?style=for-the-badge&logo=php&logoColor=white" alt="PHP" />
    </a>
    <a href="https://aws.amazon.com/" target="_blank" rel="noopener">
